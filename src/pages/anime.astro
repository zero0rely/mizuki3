          setTimeout(initFilterButtons, 200);
        });
      }
    }
    
    // åˆå§‹åŒ–Swupç›‘å¬å™¨
    if (typeof window !== 'undefined') {
      if (window.swup) {
        setupSwupListeners();
      } else {
        // å¦‚æœSwupå°šæœªåˆå§‹åŒ–ï¼Œç›‘å¬å¯ç”¨äº‹ä»¶
        document.addEventListener('swup:enable', function() {
          console.log('Swup enabled - setting up listeners');
          setupSwupListeners();
        });
      }
    }
